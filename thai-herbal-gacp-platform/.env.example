# ===================================================================
# Thai Herbal GACP Platform v3.0 - Environment Variables Example
# ===================================================================
# คัดลอกไฟล์นี้เป็น .env และแก้ไขค่าตัวแปรตามต้องการ
# cp .env.example .env

# ===================================================================
# Application Configuration
# ===================================================================
APP_NAME="Thai Herbal GACP Platform"
APP_VERSION="3.0.0"
APP_ENV="development"  # development, staging, production
APP_DEBUG="true"
APP_PORT="8080"
APP_HOST="localhost"

# ===================================================================
# Database Configuration
# ===================================================================

# PostgreSQL (Main Database)
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_DB="thai_herbal_gacp"
POSTGRES_USER="gacp_user"
POSTGRES_PASSWORD="secure_password_here"
POSTGRES_SSL_MODE="disable"  # require, verify-full for production

# Neo4j (Knowledge Graph)
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="knowledge_graph_password"
NEO4J_DATABASE="gacp_knowledge"

# Redis (Cache & Sessions)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_TTL="3600"

# ===================================================================
# Authentication & Security
# ===================================================================

# JWT Configuration
JWT_SECRET_KEY="your_jwt_secret_key_at_least_32_characters_long"
JWT_EXPIRE_HOURS="24"
JWT_REFRESH_EXPIRE_DAYS="7"
JWT_ALGORITHM="HS256"

# OAuth 2.0 (Optional)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
FACEBOOK_APP_ID="your_facebook_app_id"
FACEBOOK_APP_SECRET="your_facebook_app_secret"

# API Keys
API_SECRET_KEY="your_api_secret_key_for_internal_services"
RATE_LIMIT_PER_MINUTE="100"

# ===================================================================
# AI Services Configuration
# ===================================================================

# YOLO AI Service
YOLO_API_URL="http://localhost:5000"
YOLO_API_KEY="yolo_service_api_key"
YOLO_MODEL_VERSION="v1.0"
YOLO_CONFIDENCE_THRESHOLD="0.7"

# Computer Vision Settings
CV_MAX_IMAGE_SIZE_MB="10"
CV_SUPPORTED_FORMATS="jpg,jpeg,png,webp"
CV_RESIZE_WIDTH="640"
CV_RESIZE_HEIGHT="640"

# Reasoning Engine
REASONING_ENGINE_URL="http://localhost:5001"
REASONING_ENGINE_API_KEY="reasoning_engine_api_key"
REASONING_ENABLE_LEARNING="true"
REASONING_CONFIDENCE_THRESHOLD="0.8"

# Machine Learning
ML_MODEL_PATH="/models"
ML_INFERENCE_BATCH_SIZE="32"
ML_GPU_ENABLED="false"
ML_DEVICE="cpu"  # cpu, cuda, mps

# ===================================================================
# Government API Integration
# ===================================================================

# DTAM (Department of Agricultural Extension) API
DTAM_API_URL="https://api.dtam.go.th/v2"
DTAM_API_KEY="your_dtam_api_key"
DTAM_CLIENT_ID="your_dtam_client_id"
DTAM_CLIENT_SECRET="your_dtam_client_secret"
DTAM_TIMEOUT_SECONDS="30"
DTAM_RATE_LIMIT="50"

# FDA (Food and Drug Administration) API
FDA_API_URL="https://api.fda.moph.go.th/v1"
FDA_API_KEY="your_fda_api_key"
FDA_CERTIFICATION_ENDPOINT="/gacp/certifications"

# Digital Government Development Agency (DGA)
DGA_API_URL="https://api.dga.or.th/v1"
DGA_API_KEY="your_dga_api_key"

# ===================================================================
# Blockchain Configuration
# ===================================================================

# Hyperledger Fabric
BLOCKCHAIN_NETWORK_URL="grpc://localhost:7051"
BLOCKCHAIN_CHANNEL_NAME="gacp-channel"
BLOCKCHAIN_CHAINCODE_NAME="gacp-chaincode"
BLOCKCHAIN_ORG_NAME="GACPOrg"
BLOCKCHAIN_USER_NAME="admin"
BLOCKCHAIN_MSP_ID="GACPOrgMSP"

# Blockchain Certificates
BLOCKCHAIN_TLS_ENABLED="false"
BLOCKCHAIN_TLS_CERT_PATH="/crypto/tls/ca.crt"
BLOCKCHAIN_ADMIN_CERT_PATH="/crypto/admin/cert.pem"
BLOCKCHAIN_ADMIN_KEY_PATH="/crypto/admin/key.pem"

# ===================================================================
# File Storage Configuration
# ===================================================================

# Local Storage
STORAGE_TYPE="local"  # local, s3, gcs, azure
STORAGE_LOCAL_PATH="./storage"
STORAGE_MAX_FILE_SIZE_MB="50"

# AWS S3
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="ap-southeast-1"
AWS_S3_BUCKET="thai-herbal-gacp-storage"
AWS_S3_ENDPOINT=""

# Google Cloud Storage
GCS_PROJECT_ID="your_gcs_project_id"
GCS_BUCKET_NAME="thai-herbal-gacp-storage"
GCS_KEY_FILE_PATH="./config/gcs-key.json"

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT="your_azure_account"
AZURE_STORAGE_KEY="your_azure_key"
AZURE_STORAGE_CONTAINER="thai-herbal-gacp"

# ===================================================================
# Email & Notifications
# ===================================================================

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@thaiherbalgacp.com"
SMTP_PASSWORD="your_email_password"
SMTP_FROM_EMAIL="noreply@thaiherbalgacp.com"
SMTP_FROM_NAME="Thai Herbal GACP Platform"

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY="your_fcm_server_key"
FCM_SENDER_ID="your_fcm_sender_id"
FCM_PROJECT_ID="your_firebase_project_id"

# LINE Notify (Thailand Popular)
LINE_NOTIFY_TOKEN="your_line_notify_token"

# ===================================================================
# External Services
# ===================================================================

# Weather API (for agricultural data)
WEATHER_API_KEY="your_weather_api_key"
WEATHER_API_URL="https://api.openweathermap.org/data/2.5"

# Maps & Geolocation
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
MAPBOX_ACCESS_TOKEN="your_mapbox_token"

# Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your_mixpanel_token"

# ===================================================================
# Monitoring & Logging
# ===================================================================

# Logging
LOG_LEVEL="info"  # debug, info, warn, error
LOG_FORMAT="json"  # json, text
LOG_FILE_PATH="./logs/app.log"
LOG_MAX_SIZE_MB="100"
LOG_MAX_FILES="10"

# Prometheus Metrics
PROMETHEUS_ENABLED="true"
PROMETHEUS_PORT="9090"
PROMETHEUS_METRICS_PATH="/metrics"

# Grafana
GRAFANA_ADMIN_USER="admin"
GRAFANA_ADMIN_PASSWORD="grafana_admin_password"

# ELK Stack
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USER="elastic"
ELASTICSEARCH_PASSWORD="elastic_password"
KIBANA_URL="http://localhost:5601"

# Jaeger Tracing
JAEGER_ENDPOINT="http://localhost:14268/api/traces"
JAEGER_SERVICE_NAME="thai-herbal-gacp"

# ===================================================================
# Performance & Scaling
# ===================================================================

# Application Performance
MAX_REQUEST_SIZE_MB="10"
REQUEST_TIMEOUT_SECONDS="30"
MAX_CONCURRENT_REQUESTS="1000"
KEEP_ALIVE_TIMEOUT="5"

# Database Connection Pool
DB_POOL_MIN_CONNECTIONS="5"
DB_POOL_MAX_CONNECTIONS="20"
DB_POOL_TIMEOUT_SECONDS="30"

# Cache Configuration
CACHE_TTL_SECONDS="3600"
CACHE_MAX_MEMORY_MB="512"
CACHE_EVICTION_POLICY="allkeys-lru"

# ===================================================================
# Development & Testing
# ===================================================================

# Development Settings
DEV_AUTO_RELOAD="true"
DEV_CORS_ENABLED="true"
DEV_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
DEV_API_DOCS_ENABLED="true"

# Testing
TEST_DATABASE_URL="postgresql://test_user:test_pass@localhost:5433/gacp_test"
TEST_PARALLEL_WORKERS="4"
TEST_COVERAGE_THRESHOLD="80"
TEST_TIMEOUT_SECONDS="300"

# Mock Services (for development)
MOCK_AI_ENABLED="true"
MOCK_BLOCKCHAIN_ENABLED="true"
MOCK_GOVERNMENT_API_ENABLED="true"
MOCK_PAYMENT_ENABLED="true"

# ===================================================================
# Security Configuration
# ===================================================================

# CORS (Cross-Origin Resource Sharing)
CORS_ALLOWED_ORIGINS="https://thaiherbalgacp.com,https://app.thaiherbalgacp.com"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"
CORS_CREDENTIALS="true"

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES="15"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_SKIP_SUCCESSFUL="false"

# Security Headers
SECURITY_HSTS_ENABLED="true"
SECURITY_CSP_ENABLED="true"
SECURITY_FRAME_OPTIONS="DENY"
SECURITY_CONTENT_TYPE_OPTIONS="nosniff"

# ===================================================================
# Business Logic Configuration
# ===================================================================

# GACP Certification
GACP_CERTIFICATION_VALIDITY_YEARS="3"
GACP_MIN_SCORE_THRESHOLD="70"
GACP_AUTO_APPROVE_THRESHOLD="90"
GACP_MANUAL_REVIEW_THRESHOLD="60"

# Supported Herbs
SUPPORTED_HERBS="cannabis,turmeric,ginger,black_galingale,plai,kratom"
DEFAULT_HERB_LANGUAGE="th"
HERB_CLASSIFICATION_CONFIDENCE="0.8"

# Quality Assessment
QUALITY_MIN_IMAGE_RESOLUTION="640x640"
QUALITY_MAX_ASSESSMENT_TIME_SECONDS="30"
QUALITY_RETRY_ATTEMPTS="3"

# Track & Trace
TRACKING_QR_CODE_TTL_HOURS="168"  # 7 days
TRACKING_EVENT_RETENTION_DAYS="365"
TRACKING_NOTIFICATION_ENABLED="true"

# ===================================================================
# Localization & Internationalization
# ===================================================================

# Language Settings
DEFAULT_LANGUAGE="th"
SUPPORTED_LANGUAGES="th,en"
TIMEZONE="Asia/Bangkok"
DATE_FORMAT="dd/MM/yyyy"
CURRENCY="THB"

# Thai Specific
THAI_CALENDAR_ENABLED="true"
BUDDHIST_ERA_ENABLED="true"

# ===================================================================
# Feature Flags
# ===================================================================

# Core Features
FEATURE_AI_ANALYSIS="true"
FEATURE_BLOCKCHAIN_TRACKING="true"
FEATURE_KNOWLEDGE_GRAPH="true"
FEATURE_GOVERNMENT_INTEGRATION="true"

# Advanced Features
FEATURE_PREDICTIVE_ANALYTICS="false"
FEATURE_MOBILE_OFFLINE_MODE="true"
FEATURE_MULTI_LANGUAGE="true"
FEATURE_DARK_MODE="true"

# Experimental Features
FEATURE_VOICE_COMMANDS="false"
FEATURE_AR_VISUALIZATION="false"
FEATURE_IOT_INTEGRATION="false"
FEATURE_SATELLITE_IMAGERY="false"

# ===================================================================
# Mobile App Configuration
# ===================================================================

# Flutter App Settings
FLUTTER_APP_NAME="GACP Thailand"
FLUTTER_PACKAGE_NAME="com.thaiherbalgacp.app"
FLUTTER_VERSION_NAME="3.0.0"
FLUTTER_VERSION_CODE="30000"

# API Endpoints for Mobile
MOBILE_API_BASE_URL="https://api.thaiherbalgacp.com/v1"
MOBILE_WS_URL="wss://ws.thaiherbalgacp.com"
MOBILE_CDN_URL="https://cdn.thaiherbalgacp.com"

# Mobile Features
MOBILE_BIOMETRIC_AUTH="true"
MOBILE_OFFLINE_STORAGE_MB="100"
MOBILE_AUTO_SYNC="true"
MOBILE_PUSH_NOTIFICATIONS="true"

# ===================================================================
# Backup & Disaster Recovery
# ===================================================================

# Database Backup
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"
BACKUP_STORAGE_PATH="./backups"
BACKUP_ENCRYPTION_ENABLED="true"

# File Backup
FILE_BACKUP_ENABLED="true"
FILE_BACKUP_SCHEDULE="0 3 * * 0"  # Weekly on Sunday at 3 AM
FILE_BACKUP_COMPRESSION="gzip"

# ===================================================================
# Legal & Compliance
# ===================================================================

# Data Privacy
GDPR_COMPLIANCE="true"
DATA_RETENTION_DAYS="2555"  # 7 years as per Thai law
AUDIT_LOG_RETENTION_DAYS="2555"
PERSONAL_DATA_ENCRYPTION="true"

# Terms & Conditions
TERMS_VERSION="1.0"
PRIVACY_POLICY_VERSION="1.0"
CONSENT_TRACKING="true"

# ===================================================================
# Third-party Integrations
# ===================================================================

# Payment Gateways (if needed for premium features)
PAYMENT_GATEWAY="omise"  # omise, 2c2p, scb_easy
OMISE_PUBLIC_KEY="pkey_test_xxxxx"
OMISE_SECRET_KEY="skey_test_xxxxx"

# Social Media
FACEBOOK_PAGE_ID="your_facebook_page_id"
LINE_OFFICIAL_ACCOUNT="@thaiherbalgacp"
YOUTUBE_CHANNEL_ID="your_youtube_channel_id"

# ===================================================================
# Documentation & Support
# ===================================================================

# Help & Support
SUPPORT_EMAIL="support@thaiherbalgacp.com"
SUPPORT_PHONE="+66-2-xxx-xxxx"
DOCUMENTATION_URL="https://docs.thaiherbalgacp.com"
FAQ_URL="https://help.thaiherbalgacp.com"

# API Documentation
API_DOCS_ENABLED="true"
API_DOCS_PATH="/docs"
SWAGGER_UI_ENABLED="true"
REDOC_ENABLED="true"

# ===================================================================
# Environment Specific Overrides
# ===================================================================

# Production Only
PROD_SSL_CERT_PATH="/etc/ssl/certs/thaiherbalgacp.crt"
PROD_SSL_KEY_PATH="/etc/ssl/private/thaiherbalgacp.key"
PROD_DOMAIN="thaiherbalgacp.com"
PROD_CDN_URL="https://cdn.thaiherbalgacp.com"

# Staging Only
STAGING_DOMAIN="staging.thaiherbalgacp.com"
STAGING_DEBUG="true"
STAGING_MOCK_PAYMENTS="true"

# Development Only
DEV_SEED_DATABASE="true"
DEV_AUTO_MIGRATE="true"
DEV_HOT_RELOAD="true"
DEV_VERBOSE_LOGGING="true"

# ===================================================================
# Container & Orchestration
# ===================================================================

# Docker Configuration
DOCKER_REGISTRY="ghcr.io/your-org"
DOCKER_IMAGE_TAG="latest"
DOCKER_NETWORK="gacp-network"

# Kubernetes
K8S_NAMESPACE="thai-herbal-gacp"
K8S_CLUSTER_NAME="gacp-cluster"
K8S_INGRESS_CLASS="nginx"

# Health Checks
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_PATH="/health"
HEALTH_CHECK_INTERVAL_SECONDS="30"
READINESS_CHECK_PATH="/ready"

# ===================================================================
# Notes & Instructions
# ===================================================================

# สำคัญ: ข้อมูลในไฟล์นี้เป็นเพียงตัวอย่าง
# กรุณาเปลี่ยนรหัสผ่านและ API keys ทั้งหมดก่อนใช้งานจริง
# อย่าเผยแพร่ไฟล์ .env ที่มีข้อมูลจริงใน version control

# การใช้งาน:
# 1. คัดลอกไฟล์นี้เป็น .env
# 2. แก้ไขค่าตัวแปรตามสภาพแวดล้อมของคุณ
# 3. สร้าง API keys และรหัสผ่านที่ปลอดภัย
# 4. ตรวจสอบการเชื่อมต่อฐานข้อมูลและบริการต่างๆ

# สำหรับ Production:
# - ใช้ secret management service (AWS Secrets Manager, Azure Key Vault, etc.)
# - เปิด SSL/TLS
# - ปิด debug mode
# - ตั้งค่า monitoring และ logging
# - ทดสอบ backup และ disaster recovery
