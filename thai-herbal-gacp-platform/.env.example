# ===================================================================
# Thai Herbal GACP Platform v3.0 - Environment Variables Example
# ===================================================================
# คัดลอกไฟล์นี้เป็น .env และแก้ไขค่าตัวแปรตามต้องการ
# cp .env.example .env

# ===================================================================
# Application Configuration
# ===================================================================
APP_NAME="Thai Herbal GACP Platform"
APP_VERSION="3.0.0"
APP_ENV="development"  # development, staging, production
APP_DEBUG="true"
APP_PORT="8080"
APP_HOST="localhost"

# ===================================================================
# Database Configuration
# ===================================================================

# PostgreSQL (Main Database)
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_DB="thai_herbal_gacp"
POSTGRES_USER="gacp_user"
POSTGRES_PASSWORD="secure_password_here"
POSTGRES_SSL_MODE="disable"  # require, verify-full for production

# Neo4j (Knowledge Graph)
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="knowledge_graph_password"
NEO4J_DATABASE="gacp_knowledge"

# Redis (Cache & Sessions)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_TTL="3600"

# ===================================================================
# Authentication & Security
# ===================================================================

# JWT Configuration
JWT_SECRET_KEY="your_jwt_secret_key_at_least_32_characters_long"
JWT_EXPIRE_HOURS="24"
JWT_REFRESH_EXPIRE_DAYS="7"
JWT_ALGORITHM="HS256"

# OAuth 2.0 (Optional)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
FACEBOOK_APP_ID="your_facebook_app_id"
FACEBOOK_APP_SECRET="your_facebook_app_secret"

# API Keys
API_SECRET_KEY="your_api_secret_key_for_internal_services"
RATE_LIMIT_PER_MINUTE="100"

# ===================================================================
# AI Services Configuration
# ===================================================================

# YOLO AI Service
YOLO_API_URL="http://localhost:5000"
YOLO_API_KEY="yolo_service_api_key"
YOLO_MODEL_VERSION="v1.0"
YOLO_CONFIDENCE_THRESHOLD="0.7"

# Computer Vision Settings
CV_MAX_IMAGE_SIZE_MB="10"
CV_SUPPORTED_FORMATS="jpg,jpeg,png,webp"
CV_RESIZE_WIDTH="640"
CV_RESIZE_HEIGHT="640"

# Reasoning Engine
REASONING_ENGINE_URL="http://localhost:5001"
REASONING_ENGINE_API_KEY="reasoning_engine_api_key"
REASONING_ENABLE_LEARNING="true"
REASONING_CONFIDENCE_THRESHOLD="0.8"

# Machine Learning
ML_MODEL_PATH="/models"
ML_INFERENCE_BATCH_SIZE="32"
ML_GPU_ENABLED="false"
ML_DEVICE="cpu"  # cpu, cuda, mps

# ===================================================================
# Government API Integration
# ===================================================================

# DTAM (Department of Agricultural Extension) API
DTAM_API_URL="https://api.dtam.go.th/v2"
DTAM_API_KEY="your_dtam_api_key"
DTAM_CLIENT_ID="your_dtam_client_id"
DTAM_CLIENT_SECRET="your_dtam_client_secret"
DTAM_TIMEOUT_SECONDS="30"
DTAM_RATE_LIMIT="50"

# FDA (Food and Drug Administration) API
FDA_API_URL="https://api.fda.moph.go.th/v1"
FDA_API_KEY="your_fda_api_key"
FDA_CERTIFICATION_ENDPOINT="/gacp/certifications"

# Digital Government Development Agency (DGA)
DGA_API_URL="https://api.dga.or.th/v1"
DGA_API_KEY="your_dga_api_key"

# ===================================================================
# Blockchain Configuration
# ===================================================================

# Hyperledger Fabric
BLOCKCHAIN_NETWORK_URL="grpc://localhost:7051"
BLOCKCHAIN_CHANNEL_NAME="gacp-channel"
BLOCKCHAIN_CHAINCODE_NAME="gacp-chaincode"
BLOCKCHAIN_ORG_NAME="GACPOrg"
BLOCKCHAIN_USER_NAME="admin"
BLOCKCHAIN_MSP_ID="GACPOrgMSP"

# Blockchain Certificates
BLOCKCHAIN_TLS_ENABLED="false"
BLOCKCHAIN_TLS_CERT_PATH="/crypto/tls/ca.crt"
BLOCKCHAIN_ADMIN_CERT_PATH="/crypto/admin/cert.pem"
BLOCKCHAIN_ADMIN_KEY_PATH="/crypto/admin/key.pem"

# ===================================================================
# File Storage Configuration
# ===================================================================

# Local Storage
STORAGE_TYPE="local"  # local, s3, gcs, azure
STORAGE_LOCAL_PATH="./storage"
STORAGE_MAX_FILE_SIZE_MB="50"

# AWS S3
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="ap-southeast-1"
AWS_S3_BUCKET="thai-herbal-gacp-storage"
AWS_S3_ENDPOINT=""

# Google Cloud Storage
GCS_PROJECT_ID="your_gcs_project_id"
GCS_BUCKET_NAME="thai-herbal-gacp-storage"
GCS_KEY_FILE_PATH="./config/gcs-key.json"

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT="your_azure_account"
AZURE_STORAGE_KEY="your_azure_key"
AZURE_STORAGE_CONTAINER="thai-herbal-gacp"

# ===================================================================
# Email & Notifications
# ===================================================================

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@thaiherbalgacp.com"
SMTP_PASSWORD="your_email_password"
SMTP_FROM_EMAIL="noreply@thaiherbalgacp.com"
SMTP_FROM_NAME="Thai Herbal GACP Platform"

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY="your_fcm_server_key"
FCM_SENDER_ID="your_fcm_sender_id"
FCM_PROJECT_ID="your_firebase_project_id"

# LINE Notify (Thailand Popular)
LINE_NOTIFY_TOKEN="your_line_notify_token"

# ===================================================================
# External Services
# ===================================================================

# Weather API (for agricultural data)
WEATHER_API_KEY="your_weather_api_key"
WEATHER_API_URL="https://api.openweathermap.org/data/2.5"

# Maps & Geolocation
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
MAPBOX_ACCESS_TOKEN="your_mapbox_token"

# Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your_mixpanel_token"

# ===================================================================
# Monitoring & Logging
# ===================================================================

# Logging
LOG_LEVEL="info"  # debug, info, warn, error
LOG_FORMAT="json"  # json, text
LOG_FILE_PATH="./logs/app.log"
LOG_MAX_SIZE_MB="100"
LOG_MAX_FILES="10"

# Prometheus Metrics
PROMETHEUS_ENABLED="true"
PROMETHEUS_PORT="9090"
PROMETHEUS_METRICS_PATH="/metrics"

# Grafana
GRAFANA_ADMIN_USER="admin"
GRAFANA_ADMIN_PASSWORD="grafana_admin_password"

# ELK Stack
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USER="elastic"
ELASTICSEARCH_PASSWORD="elastic_password"
KIBANA_URL="http://localhost:5601
