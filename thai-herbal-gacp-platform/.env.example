# =====================================
# Thai Herbal GACP Platform Configuration
# =====================================
# Copy this file to .env and fill in actual values
# DO NOT commit .env to version control!

# =======================
# General Configuration
# =======================
APP_ENV=development
APP_NAME="Thai Herbal GACP Platform"
APP_VERSION=1.0.0
TIMEZONE=Asia/Bangkok

# =======================
# Database Configuration
# =======================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gacp_db
DB_USER=gacp_user
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_SIZE=20

# Event Store Configuration
EVENT_STORE_URL=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =======================
# Backend Configuration
# =======================
BACKEND_PORT=8080
BACKEND_HOST=0.0.0.0
SECRET_KEY=your_secret_key_here
JWT_EXPIRY=3600  # 1 hour in seconds
API_RATE_LIMIT=100  # Requests per minute

# =======================
# Frontend Configuration
# =======================
FRONTEND_PORT=5000
API_BASE_URL=http://localhost:${BACKEND_PORT}
MAPBOX_API_KEY=your_mapbox_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =======================
# AI Services Configuration
# =======================
AI_VALIDATOR_URL=http://localhost:5001
YOLO_API_URL=http://localhost:5002
PREDICTIVE_API_URL=http://localhost:5003

# =======================
# Government API Integration
# =======================
FDA_API_URL=https://fda-sandbox.api.th
FDA_API_KEY=your_fda_api_key
DOA_API_URL=https://doa-api.th
DOA_API_KEY=your_doa_api_key
CUSTOMS_API_URL=https://customs-api.th
CUSTOMS_API_KEY=your_customs_api_key

# =======================
# Storage Configuration
# =======================
STORAGE_TYPE=local  # local, s3, gcs
S3_BUCKET=gacp-documents
S3_REGION=ap-southeast-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
GCS_BUCKET=gacp-documents
GCS_CREDENTIALS_PATH=/path/to/gcs-credentials.json

# =======================
# Email Configuration
# =======================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM_NAME="GACP Support"
EMAIL_FROM_ADDRESS=support@gacp.th

# =======================
# Monitoring
# =======================
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =======================
# Digital Signature
# =======================
SIGNING_CERT_PATH=/path/to/signing_cert.pem
SIGNING_KEY_PATH=/path/to/signing_key.pem
VERIFICATION_CERT_PATH=/path/to/verification_cert.pem

# =======================
# Development Flags
# =======================
DEBUG=true
ENABLE_MOCK_SERVICES=false
LOG_LEVEL=debug  # debug, info, warning, error
